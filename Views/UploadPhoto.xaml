<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             xmlns:helpers="clr-namespace:DynamicDisplay_ProofOfConcept.Helpers"
             x:Class="DynamicDisplay_ProofOfConcept.Views.UploadPhoto"
             Shell.TabBarIsVisible="False"
             Title="Upload Photo">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Back" Clicked="Back" IconImageSource="{FontImageSource FontFamily=MaterialDesignIcons, Glyph={x:Static helpers:MaterialDesingIconFonts.ArrowLeft}}"/>
    </ContentPage.ToolbarItems>
    <VerticalStackLayout>
        <cv:CameraView x:Name="cameraView" WidthRequest="400" HeightRequest="400"/>
        <Button FontFamily="MaterialDesignIcons" Text="{x:Static helpers:MaterialDesingIconFonts.CameraOutline}" Clicked="Kapture"/>
    </VerticalStackLayout>  
</ContentPage>