<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DynamicDisplay_ProofOfConcept.Views.KaptureBoard"
             Title="Kapture Board"
             xmlns:local="clr-namespace:DynamicDisplay_ProofOfConcept.ViewModels">

    <ContentPage.BindingContext>
            <local:KaptureBoardViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI! Kapture Board"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <CollectionView ItemsSource="{Binding KaptureBoardItems}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Title}" />

                </DataTemplate>

            </CollectionView.ItemTemplate>

        </CollectionView>
  
        
    </VerticalStackLayout>

</ContentPage>