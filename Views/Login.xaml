<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DynamicDisplay_ProofOfConcept.Views.Login"
             BackgroundColor="White"
             Title="Login">
    <VerticalStackLayout>
        <Entry Placeholder="Username" Text="{Binding LoginModel.Username}"/>
        <Entry Placeholder="Password" Text="{Binding LoginModel.Password}"/>
        <Button Text="Login" BackgroundColor="Black" TextColor="White" Command="{Binding Login}"/>
    </VerticalStackLayout>
</ContentPage>